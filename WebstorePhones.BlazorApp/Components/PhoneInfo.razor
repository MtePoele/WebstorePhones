@using WebstorePhones.Domain.Entities

<div>
    <Row>
        <Column ColumnSize="ColumnSize.Is2">
                <Figure Size="FigureSize.Is128x128">
                    <FigureImage Source="https://blazorise.com/img/empty-256x256.png" AlternateText="empty-256x256" />
                </Figure>
        </Column>
        <Column ColumnSize="ColumnSize.Is4">
                <ListGroup Flush>
                    <ListGroupItem>@phone.Brand.BrandName - @phone.Type</ListGroupItem>
                    <ListGroupItem>@Math.Round(phone.PriceWithTax, 2)   @phone.Stock left in stock!</ListGroupItem>
                    <ListGroupItem><Button Color="Color.Primary" Type="ButtonType.Link" To=@($"/PhoneDetails/{phone.Id}")  Float="Float.End">Show more</Button></ListGroupItem>
                </ListGroup>
        </Column>
    </Row>
</div>

@code {
    [Parameter]
    public Phone phone { get; set; }
}
